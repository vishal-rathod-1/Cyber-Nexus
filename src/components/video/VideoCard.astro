---
import type { Video } from '../../types/video';

interface Props {
    video: Video;
}

const { video } = Astro.props;

// Helper to get YouTube thumbnail URL
const getYouTubeThumbnail = (url: string) => {
    const videoId = url.split('v=')[1]?.split('&')[0];
    return videoId ? `https://img.youtube.com/vi/${videoId}/maxresdefault.jpg` : '';
};
---

<article class="video-card">
    <a href={`/videos/${video.id}`} class="video-link">
        <div class="thumbnail">
            <img 
                src={video.source.thumbnailUrl || getYouTubeThumbnail(video.source.url)} 
                alt={video.title}
                loading="lazy"
            />
            <div class="play-button">â–¶</div>
        </div>
        <div class="content">
            <span class="category">{video.category}</span>
            <h3>{video.title}</h3>
            <p>{video.description}</p>
            <time datetime={video.publishedAt}>
                {new Date(video.publishedAt).toLocaleDateString()}
            </time>
        </div>
    </a>
</article>

<style>
    .video-card {
        background: rgba(var(--darker-bg), 0.8);
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.2s;
        border: 1px solid rgba(var(--cyber-blue), 0.2);
    }

    .video-card:hover {
        transform: translateY(-4px);
        border-color: rgba(var(--cyber-blue), 0.3);
    }

    .thumbnail {
        position: relative;
        aspect-ratio: 16/9;
    }

    .thumbnail img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .play-button {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 60px;
        height: 60px;
        background: rgba(var(--neon-pink), 0.9);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 24px;
        opacity: 0;
        transition: opacity 0.2s;
    }

    .video-card:hover .play-button {
        opacity: 1;
    }

    .content {
        padding: 1.5rem;
    }

    .category {
        background: rgba(var(--neon-purple), 0.1);
        color: rgb(var(--cyber-blue));
        padding: 0.25rem 0.75rem;
        border-radius: 1rem;
        font-size: 0.875rem;
    }

    h3 {
        margin: 1rem 0;
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--text-primary);
    }

    p {
        color: var(--text-secondary);
        margin-bottom: 1rem;
        line-height: 1.5;
    }

    time {
        color: rgba(var(--cyber-blue), 0.8);
        font-size: 0.875rem;
    }
</style>