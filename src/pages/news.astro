---
import Layout from '../layouts/Layout.astro';
import { tools } from '../data/tools';
import { formatDate } from '../utils/dateUtils';

const sortedNews = [...tools]
    .sort((a, b) => new Date(b.publishedAt).getTime() - new Date(a.publishedAt).getTime());
---

<Layout title="Security News - CyberTools Daily">
    <section class="news-header">
        <h1>Security News & Updates</h1>
        <p>Stay informed about the latest tools and cybersecurity developments</p>
    </section>

    <div class="news-timeline">
        {sortedNews.map(item => (
            <article class="news-item">
                <div class="news-date">
                    <time datetime={item.publishedAt}>{formatDate(item.publishedAt)}</time>
                </div>
                <div class="news-content">
                    <h2>{item.title}</h2>
                    <p>{item.description}</p>
                    <a href={`/tools/${item.id}`} class="read-more">Read More â†’</a>
                </div>
            </article>
        ))}
    </div>
</Layout>

<style>
    .news-header {
        text-align: center;
        margin: 3rem 0;
    }
    h1 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1rem;
        background: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    .news-timeline {
        max-width: 800px;
        margin: 4rem auto;
    }
    .news-item {
        display: grid;
        grid-template-columns: 150px 1fr;
        gap: 2rem;
        margin-bottom: 3rem;
    }
    .news-date {
        text-align: right;
        color: rgb(var(--accent-light));
        font-weight: 500;
    }
    .news-content {
        position: relative;
        padding-left: 2rem;
        border-left: 2px solid rgba(var(--accent), 0.3);
    }
    .news-content::before {
        content: '';
        position: absolute;
        left: -6px;
        top: 0;
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: rgb(var(--accent));
    }
    h2 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--text-primary);
    }
    .read-more {
        display: inline-block;
        margin-top: 1rem;
        color: rgb(var(--accent-light));
        text-decoration: none;
        font-weight: 500;
    }
    .read-more:hover {
        text-decoration: underline;
    }
</style>